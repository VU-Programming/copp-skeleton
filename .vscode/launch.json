{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/ijvm",
            "args": ["${input:ijvmProgramID}"],
            "cwd": "${workspaceFolder}",
            // "stopAtEntry": true,  // uncomment to automatically set breakpoint at start of main.
            "preLaunchTask": "Build ijvm",
        },
        {
            "name": "Build and Debug test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/${input:testID}",
            "cwd": "${workspaceFolder}",
            // "stopAtEntry": true,  // uncomment to automatically set breakpoint at start of main.
            // "preLaunchTask": "Build all tests",
            "preLaunchTask": "Build test_${input:testID}",
        }
    ],
    "inputs": [
        {
            "id": "testID",
            "type": "pickString",
            "description": "Which test do you want to debug?",
            "options": [
                "test1",
                "test2",
                "test3",
                "test4",
                "test5",
                "testadvanced1",  
                "testadvanced2",  
                "testadvanced3", 
                "testadvanced4", 
                "testadvanced5", 
                "testadvanced6",  
                "testadvanced7",  
                "testadvancedstack",  
                "testbonusheap",
                "testbonustail",
                "testbonusgarbage",  
                "testframe",  
            ]
        },
        {
            "id": "ijvmProgramID",
            "type": "command",
            "command": "shellCommand.execute",
            "args":{
                "command" : "find . -name '*.ijvm'",
                "cwd": "${workspaceFolder}",
            }
        }
    ]
}